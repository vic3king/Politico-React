{
  "src_folders": ["./src/test/e2e"],
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",
  "output_folder": "./src/test/e2e/reports",

  "webdriver": {
    "start_process": true
  },

  "test_settings": {
    "default": {
      "webdriver": {
        "server_path": "./node_modules/.bin/geckodriver",
        "port": 4444,
        "cli_args": ["--log", "debug"]
      },
      "filter": ["./src/test/e2e"],
      "desiredCapabilities": {
        "browserName": "firefox",
        "acceptInsecureCerts": true
      }
    },

    "chrome": {
      "webdriver": {
        "port": 9515,
        "server_path": "./node_modules/.bin/chromedriver",
        "cli_args": ["--verbose"]
      },

      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "args": ["--no-sandbox"]
        },
        "loggingPrefs": { "driver": "INFO", "server": "OFF", "browser": "INFO" }
      }
    },

    "selenium_server": {
      "selenium": {
        "start_process": true,
        "host": "localhost",
        "server_path": "./node_modules/.bin/selenium-server-standalone-3.10.0.jar",
        "cli_args": {
          "webdriver.gecko.driver": "./node_modules/.bin/geckodriver-0.23",
          "webdriver.chrome.driver": "./node_modules/.bin/chromedriver-2.32"
        }
      },

      "desiredCapabilities": {
        "browserName": "firefox",
        "acceptSslCerts": true
      }
    }
  }
}
